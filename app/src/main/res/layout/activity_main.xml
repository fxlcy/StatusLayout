<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <cn.fxlcy.widget.StatusLayout
        android:id="@+id/sl"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:textSize="80dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:backgroundTint="#22FF0000"
            android:text="normal"
            app:layout_status="NORMAL" />

        <TextView
            android:textSize="80dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:backgroundTint="#22FFFF00"
            android:text="error"
            app:layout_status="ERROR" />

        <TextView
            android:textSize="80dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:backgroundTint="#22FF00FF"
            android:text="empty"
            app:layout_status="EMPTY" />

        <TextView
            android:textSize="80dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:backgroundTint="#2200FFFF"
            android:text="loading"
            app:layout_status="LOADING" />

        <TextView
            android:textSize="80dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:backgroundTint="#2200FFFF"
            android:text="status-6"
            app:layout_status="-6" />


        <TextView
            android:textSize="80dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:backgroundTint="#2200FFFF"
            android:text="status-7"
            app:layout_status="-7" />

    </cn.fxlcy.widget.StatusLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="切换status" />
</LinearLayout>
